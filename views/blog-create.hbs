{{#>layout currentPage='Create Blog'}}
       
        <!-- create blog-->
    <main>
        
        <form id="create-blog" action="/blog-create" method="post" class="create-blog-form">
            <h1 style="text-align: center;">Create New Blog</h1>

            <div class="form-field">
                <label for="title">judul</label>
                <input name="title" id="title" type="text"required>
            </div>

            <div class="form-field">
                <label for="content">content</label>
            <textarea name="content" id="content" rows="7" required></textarea>
            </div>

            <div class="form-field">
                <label for="image">Upload Image</label>
                <input
                  type="file"
                  id="image"
                  name="Image"
                  accept="image/*"
                />
              </div>

            <div class="button-container">
                <button type="submit">submit</button>
            </div>

        </form>
</main>
        
{{/layout}}
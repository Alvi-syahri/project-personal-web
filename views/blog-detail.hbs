{{#>layout currentPage='Blog'}}

        
        <article class="blog-item">
            <div class="blog-item-img">
                <img src={{blog.image}} alt="">
            </div>
            <div class="blog-item-text">
                <h1>{{blog.title}}</h1>
                <p>{{nama}}</p>
                <p>{{umur}}</p>
                <p>{{formatDateToWIB blog.createdAt}} | {{blog.author}}</p>
                <p>{{blog.content}}</p>
            </div>
        </article>
    
    </section>
</main>
{{/layout}}